#set term gif font "Arial,60" animate delay 100

set terminal gif transparent animate delay 20 size 1000,600 font "Arial,24"
set title 'Solución analítica'
set output 'analytic.gif' 
#set size 1
set xlabel 'x (m)'
set ylabel 'Temperature (K)'
unset key 
#set xrange [-12:12]
set yrange [-0.6:0.2]
do for [i=1:38] {
    p 'analytic.dat' u 1:3 index (i-1) pt 7 ps 2
}

set title 'Solución numérica'
set output 'numeric.gif' 
do for [i=1:38] {
    p 'numeric.dat' u 1:3 index (i-1) pt 7 ps 2
}
